{
	"name"			: "ipub/flash-messages",
	"type"			: "library",
	"description"	: "Flash messages handler for Nette Framework",
	"keywords"		: ["nette", "ipub", "ipublikuj", "tools", "flashes", "messages"],
	"homepage"		: "https://github.com/iPublikuj/flash-messages",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support": {
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/flash-messages/issues"
	},

	"extra": {
		"ipub"	: {
			"configuration" : {
				"extensions" : {
					"flashMessages" : "IPub\\FlashMessages\\DI\\FlashMessagesExtension"
				}
			}
		}
	},

	"require": {
		"php"	: ">=7.0.0",

		"nette/application"	: "~2.3",
		"nette/di"			: "~2.3",
		"nette/utils"		: "~2.3",
		"nette/http"		: "~2.3",

		"latte/latte"	: "~2.3",

		"pds/skeleton"	: "@dev"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.3",
		"nette/forms"			: "~2.3",
		"nette/mail"			: "~2.3",
		"nette/robot-loader"	: "~2.3",
		"nette/safe-stream"		: "~2.3",
		"nette/tester"			: "@dev",

		"tracy/tracy"	: "@dev",

		"kdyby/translation"	: "~2.0"
	},

	"autoload": {
		"psr-0": {
			"IPub\\FlashMessages\\": "src/"
		}
	}
}
